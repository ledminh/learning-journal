generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model JournalEntry {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  slug        String
  description String
  materialId  String   @unique
  content     String
  dateId      String?
  Date        Date?    @relation(fields: [dateId], references: [id])
  material    Material @relation(fields: [materialId], references: [id])
  tags        Tag[]    @relation("JournalEntryToTag")
}

model Tag {
  id        String         @id @default(uuid())
  createdAt DateTime       @default(now())
  name      String
  slug      String
  entries   JournalEntry[] @relation("JournalEntryToTag")
}

model Material {
  id        String        @id @default(uuid())
  createdAt DateTime      @default(now())
  type      MaterialType
  content   String
  entry     JournalEntry?
}

model Date {
  id    String         @id @default(uuid())
  date  DateTime       @default(now())
  entry JournalEntry[]
}

enum MaterialType {
  LINK
  QUOTE
  CODE
  IMAGE
}
